<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292E98"
    tools:context=".elecciony">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="673dp"
        android:text="BIENVENIDO"
        android:textStyle="bold"
        android:textColor="#CDCBB8"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="420dp"
        android:textColor="#CDCBB8"
        android:text="Introduce el nombre de los jugadores"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="377dp"
        android:layout_height="76dp"
        android:background="#485CDD"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@mipmap/cruz_foreground" />

        <EditText
            android:inputType="text"
            android:maxLines="1"
            android:id="@+id/edittext1"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:hint="Primer jugador"
            android:textColorHint="#CDCBB8"
            android:textColor="#CDCBB8"></EditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="377dp"
        android:layout_height="76dp"
        android:layout_marginTop="200dp"
        android:background="#485CDD"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@mipmap/circulo_foreground" />

        <EditText
            android:inputType="text"
            android:maxLines="1"
            android:id="@+id/edittext2"
            android:layout_width="300dp"
            android:layout_height="66dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:hint="Segundo jugador"
            android:textColorHint="#CDCBB8"
            android:textColor="#CDCBB8"></EditText>


    </LinearLayout>

    <Button
        android:id="@+id/button15"
        android:layout_width="304dp"
        android:layout_height="60dp"
        android:background="@drawable/nuevoboton"
        android:text="Comenzar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <Button
        android:id="@+id/buttonRetroceso1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="R"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CDCBB8"
        android:text="pulsa R para volver a elegir juego"
        android:textAlignment="center"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="206dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132"
        app:srcCompat="@mipmap/troll_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>